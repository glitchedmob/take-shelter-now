		"shadcn-svelte": "^1.0.10",
		"svelte": "^5.43.2",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12",
		"vitest": "^4.0.6"
